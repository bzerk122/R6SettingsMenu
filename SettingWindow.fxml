                  </Pane>
                  <Button id="buttons" fx:id="btn_save" layoutX="750.0" layoutY="-4.0" mnemonicParsing="false" onAction="#save" text="Save">
                     <font>
                        <Font name="Arial" size="12.0" />
                     </font>
                  </Button>
