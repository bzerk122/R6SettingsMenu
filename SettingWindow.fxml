            <Pane layoutX="-7.0" layoutY="625.0" prefHeight="77.0" prefWidth="1000.0" AnchorPane.bottomAnchor="1.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
